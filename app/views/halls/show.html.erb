<% end %>

<% content_for :actions do %>
    <% if can? :edit, @hall %>
        <%= link_to t('buttons.edit'), edit_hall_path(@hall), class: "btn btn-primary" %>
    <% end %>
    <% if can? :delete, @hall %>
        <%= link_to t('buttons.delete'), @hall, method: :delete, data: { confirm: t('messages.delete_confirmation', id: @hall.id) }, class: "btn btn-outline-danger mr-3" %>
    <% end %>
<% end %>

<%= render partial: 'shared/attributes_table', locals: { object: @hall, display_attributes: method(:hall_display_attributes) } %>

<h2 class="col-md-6 mx-auto">Login</h2>
<div class="card card-body center-block col-md-6 mx-auto my-4">
    <%= form_for :session, url: login_path, class: "form-inline" do |f| %>
        <div class="from-group">
            <%= f.label :email, "Email" %>
            <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="from-group my-4">
            <%= f.label :password, "Hasło" %>
            <%= f.password_field :password, class: "form-control" %>
        </div>
        <%= f.submit "Zaloguj się", class: "btn btn-primary form-group" %>
    <% end %>
</div>

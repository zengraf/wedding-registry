<%= render 'shared/error_messages' %>
<h2>Nowe zamówienie</h2>
<div class="card card-body my-4">
    <%= form_for @order, class: "form-inline" do |f| %>
        <div class="row">
            <div class="from-group col">
                <%= f.label :name, "Imię" %>
                <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="from-group col">
                <%= f.label :surname, "Nazwisko" %>
                <%= f.text_field :surname, class: "form-control" %>
            </div>
            <div class="from-group col">
                <%= f.label :phone_number, "Numer komórkowy" %>
                <%= f.text_field :phone_number, class: "form-control" %>
            </div>
        </div><br>
        <div class="row">
            <div class="from-group col">
                <%= f.label :date, "Data wesela" %>
                <%= f.date_field :date, class: "form-control", value: Date.tomorrow %>
            </div>
            <div class="form-group col">
                <%= f.label :deposit, "Płatność wstępna" %>
                <%= f.number_field :deposit, step: :any, class: "form-control" %>
            </div>
            <div class="from-group col">
                <%= f.label :hall_id, "Sala" %>
                <%= f.select :hall_id, Hall.all.collect { |h| [h.name, h.id] }, {}, class: "form-control" %>
            </div>
            <div class="from-group col">
                <%= f.label :confirmed, "Status" %>
                <%= f.select :confirmed, [["Nie potwierdzone", 0], ["Potwierdzone", 1]], {selected: 0}, class: "form-control", disabled: !current_user.admin? %>
            </div>
        </div><br>
        <%= f.submit "Zapisz", class: "btn btn-primary form-group mr-2" %>
        <%= link_to "Anuluj", orders_path, class: "btn btn-outline-primary form-group" %>
    <% end %>
</div>
